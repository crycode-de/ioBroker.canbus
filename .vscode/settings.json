{
    "typescript.tsdk": "node_modules/typescript/lib",
    "eslint.enable": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,

    // add json schemas for well-known-messages
    "json.schemas": [
        {
            "fileMatch": [
                "io-package.json"
            ],
            "url": "https://raw.githubusercontent.com/ioBroker/ioBroker.js-controller/master/schemas/io-package.json"
        },
        {
            "fileMatch": [
                "/well-known-messages/configs/*.json"
            ],
            "url": "./well-known-messages/schemas/messages.json"
        },
        {
            "fileMatch": [
                "/well-known-messages/index.json"
            ],
            "url": "./well-known-messages/schemas/index.json"
        },
    ],
    "cSpell.words": [
        "acked",
        "consts",
        "dayofweek",
        "playid",
        "unreach",
        "uuidv"
    ]
}