{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "protocol": "inspector",
      "request": "attach",
      "name": "Attach Remote",
      "address": "${input:remoteHost}",
      "port": 9229,
      "smartStep": true,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outFiles": [
        "${workspaceFolder}/build/**/*.js"
      ],
      "sourceMaps": true,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/opt/iobroker/node_modules/iobroker.canbus",
      "trace": true
    }
  ],
  "inputs": [
    {
      "id": "remoteHost",
      "description": "Host to connect to",
      "default": "127.0.0.1",
      "type": "promptString"
    }
  ]
}